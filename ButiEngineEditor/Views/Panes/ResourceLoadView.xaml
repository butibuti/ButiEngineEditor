                    </Menu>
                    <ListView Grid.Row="1" Name="MotionList"  SelectionMode="Extended" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding}" >
                        <ListView.ItemsPanel >
                            <ItemsPanelTemplate>
