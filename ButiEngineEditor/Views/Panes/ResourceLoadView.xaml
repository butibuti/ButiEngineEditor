                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="300" Height="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Title}"/>
                                    <icon:PackIconMaterial Grid.Row="1" Kind="Script" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="150"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Sound">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Menu Grid.Row="0">
                        <Button ToolTip="SoundLoad" x:Name="SoundLoadButton" Click="SoundLoadButton_Click">
                            <icon:Material x:Name="SoundLoad" Kind="FilePlus" />
                        </Button>
                        <Button ToolTip="SoundUnLoad" x:Name="SoundUnLoadButton" Click="SoundUnLoadButton_Click">
                            <icon:Material x:Name="SoundUnLoad" Kind="TrashCan" />
                        </Button>
                    </Menu>
                    <ListView Grid.Row="1" Name="SoundList"  SelectionMode="Extended" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding}" >
                        <ListView.ItemsPanel >
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="300" Height="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Title}"/>
                                    <icon:PackIconMaterial Grid.Row="1" Kind="VolumeHigh" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="150"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Motion">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Menu Grid.Row="0">
                        <Button ToolTip="MotionLoad" x:Name="MotionLoadButton" Click="MotionLoadButton_Click">
                            <icon:Material x:Name="MotionLoad" Kind="FilePlus" />
                        </Button>
                        <Button ToolTip="MotionUnLoad" x:Name="MotionUnLoadButton" Click="MotionUnLoadButton_Click">
