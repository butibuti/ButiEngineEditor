                    <ListView Grid.Row="1" Name="PixelShaderList"  SelectionMode="Extended" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding}" >
                        <ListView.ItemsPanel >
                            <ItemsPanelTemplate>
