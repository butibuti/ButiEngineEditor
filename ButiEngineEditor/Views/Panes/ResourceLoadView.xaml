                    </Grid.RowDefinitions>
                    <Menu Grid.Row="0">
                        <Button ToolTip="ScriptLoad" x:Name="ScriptLoadButton" Click="ScriptLoadButton_Click">
                            <icon:Material x:Name="ScriptLoad" Kind="FilePlus" />
